                        <physics restLoad="1.0" tipOcclusionAreaGroupId="1" repr="wheelLeft" radius="0.09" width="0.3" mass="0.02" initialCompression="50" suspTravel="0.05" spring="300" damper="100" frictionScale="0.1"/>
